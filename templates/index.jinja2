<body class="bg-gray-50 text-gray-800">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-teal-600">Keyman</a>
            <div>
                <a href="#features" class="text-gray-700 hover:text-teal-600 mx-4">Features</a>
                <a href="#how-it-works" class="text-gray-700 hover:text-teal-600 mx-4">How It Works</a>
                <a href="#testimonials" class="text-gray-700 hover:text-teal-600 mx-4">Testimonials</a>

