    <main>
        <!-- Hero Section with Form -->
        <section class="bg-gradient-to-r from-teal-500 py-6 to-indigo-600 text-white">
            <div class="container mx-auto px-6 py-6 text-center">
                <h1 class="text-4xl font-bold mb-4">Unlock the Key to Successful Job Applications</h1>
                <p class="text-xl mb-8">Extract essential keywords from job descriptions to tailor your resume and cover
                    letters.</p>
                <!-- Job Description Form -->
                <div class="max-w-2xl mx-auto">
                    <form method="POST">
                        <textarea id="job-description" name="job_description" rows="8"
                            class="w-full px-4 py-2 text-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-600"
                            placeholder="Paste your job description here..." required></textarea>
                        <button type="submit" hx-post="/extract" hx-target="#keyword_list" hx-indicator="#loader"
                            class="mt-4 w-full bg-white text-teal-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100">Extract
                            Keywords</button>
                    </form>
                    <!-- Keywords Display -->
                    <div id="keywords-output" class="mt-8 text-left hidden">
                        <h2 class="text-2xl font-bold mb-4">Extracted Keywords:</h2>
                        <ul id="keywords-list" class="list-disc list-inside text-lg"></ul>
                    </div>
                </div>
            </div>
            <!-- Loading Spinner -->
            <div id="loader" class="hidden flex justify-center mt-4">
                <span class="loading loading-spinner loading-lg text-teal-600"></span>
            </div>
            <!-- Keyword List -->
            <section class="m-auto flex flex-col gap-5 mb-6">
                <section id="keyword_list" class="flex flex-wrap justify-center gap-2">

                </section>
            </section>
        </section>

